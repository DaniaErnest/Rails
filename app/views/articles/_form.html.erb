<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
         <%= render 'shared/errors'%>
            <%= form_with(model: @article, data: { turbo: false }, class:"shadow p-3 mb-3 bg-info rounded",  local: true) do |f| %>
                <div class="mb-3 row">
                    <%= f.label :title, class:"col-sm-2 col-form-label text-light" %>
                    <div class="col-sm-10">
                        <%= f.text_field :title, class:"form-control shadow rounded",placeholder:"Title of Article"%>
                    </div>
                </div>
            
                <div class="mb-3 row">
                    <%= f.label :description, class:"col-sm-2 col-form-label text-light" %>
                    <div class="col-sm-10">
                        <%= f.text_area :description, class:"form-control shadow rounded",rows: 10, placeholder:"Description of Article"%>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg"%>
                </div>
            <%end%>
        </div>
         <%= link_to "[Article List]", articles_path, class:"d-flex justify-content-center mt-2" %>
     </div>
   
</div>
<h1 class="text-center mt-4">Showing articles details</h1>

<div class="container">
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-body rounded">
                    <div class="card-header fst-italic">
                        By <%= @article.user.username if @article.user %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%=@article.title %></h5>
                        <p class="card-text"><%= simple_format(@article.description) %></p>
                        <%= link_to 'Edit', edit_article_path, class: "btn btn-outline-warning" %>
                        <td><%= link_to 'Delete', article_path, data: { turbo_method: :delete,turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
                    </div>
                    <div class="card-footer text-muted">
                    <small>Created <%= time_ago_in_words(@article.created_at)%> &
                        edited <%= time_ago_in_words(@article.updated_at)%>
                    </small>
                    </div>
                </div>
            </div>
        </div>
</div>
